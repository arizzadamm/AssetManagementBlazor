
<MudDialog>
    <DialogContent>
        <MudText Typo="Typo.h6">Are you sure you want to delete this customer?</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="ConfirmDelete">Yes</MudButton>
        <MudButton OnClick="Cancel">No</MudButton>
    </DialogActions>
</MudDialog>

@code {

    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    void ConfirmDelete() => MudDialog.Close(DialogResult.Ok(true));
    void Cancel() => MudDialog.Cancel();
}