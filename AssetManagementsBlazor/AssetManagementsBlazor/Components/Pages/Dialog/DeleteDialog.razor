@inject IDialogService DialogService

<MudDialog>
    <DialogContent>
        <MudText Typo="Typo.h6">Confirm Deletion</MudText>
        <MudText>Are you sure you want to delete @ItemName?</MudText>
    </DialogContent>
    <DialogActions>
            <MudButton Color="Color.Secondary" OnClick="@Cancel">Cancel</MudButton>
            <MudButton Color="Color.Error" OnClick="@ConfirmDelete">Delete</MudButton>
    </DialogActions>
</MudDialog>

@code {

    [Parameter] public string ItemName { get; set; }
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    void ConfirmDelete() => MudDialog.Close(DialogResult.Ok(true));
    void Cancel() => MudDialog.Cancel();
}