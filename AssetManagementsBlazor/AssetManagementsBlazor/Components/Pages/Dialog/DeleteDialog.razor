@inject IDialogService DialogService

<MudDialog>
    <DialogContent>
        <MudText Typo="Typo.h6">Confirm Deletion</MudText>
        <MudText>Are you sure you want to delete @ItemName?</MudText>
        <MudSpacer/>
    </DialogContent>
    <DialogActions>
            <MudButton Color="Color.Secondary" OnClick="@Cancel">Cancel</MudButton>
            <MudButton Color="Color.Error" OnClick="@Confirm">Delete</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }
    [Parameter] public string ItemName { get; set; }
    [Parameter] public Guid CategoryOid { get; set; }

    private void Cancel() => MudDialog.Cancel();

    private void Confirm() => MudDialog.Close(DialogResult.Ok(true));
}